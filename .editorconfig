# EditorConfig is awesome: http://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
ij_visual_guides = 120

[*.{bat,cmd}]
end_of_line = crlf

[.htaccess]
indent_style = tab

[*.js]
indent_size = 2

[*.json]
indent_style = tab

[*.rst]
indent_size = 3
max_line_length = 80

[*.sql]
indent_size = 2
indent_style = tab

[*.svg]
insert_final_newline = false

[*.{ts,tsconfig,typoscript}]
indent_size = 2

[*.{xlf,xml}]
indent_style = tab
ij_continuation_indent_size = 8

[*.{yaml,yml}]
indent_size = 2

[*.{htm,html,phtml,svg,twig,xsd}]
ij_continuation_indent_size = 8
