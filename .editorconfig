root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
ij_visual_guides = 120

[*.{bat,cmd}]
end_of_line = crlf

[*.{yaml,yml}]
indent_size = 2

[*.{htm,html,phtml,svg,twig,xml,xsd}]
ij_continuation_indent_size = 8

[.htaccess]
indent_style = tab

[*.xlf]
indent_style = tab

[*.sql]
indent_style = tab
